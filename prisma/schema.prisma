// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetSize {
  Pequenino
  Medio
  Grande
}

enum PetAge {
  Filhote
  Adulto
}

enum EnergyLevel {
  Baixa
  Alta
}

enum DependencyLevel {
  Baixo
  Alto
}

enum Environment {
  Aberto
  Fechado
}

model Org {
  id            String   @id @default(uuid())
  owner         String
  cep           String
  created_at    DateTime @default(now())
  email         String   @unique
  password_hash String
  whatsapp      String   @unique
  adress        String
  adress_number Int
  Pet           Pet[]

  @@map("orgs")
}

model Pet {
  id               String          @id @default(uuid())
  age              PetAge
  name             String
  size             PetSize
  energy           EnergyLevel
  dependency_level DependencyLevel
  environment      Environment
  about_me         String
  requirements     String[]
  photo            String
  org_id           String
  org              Org             @relation(fields: [org_id], references: [id])

  @@map("pets")
}
